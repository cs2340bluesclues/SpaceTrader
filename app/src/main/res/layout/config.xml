        app:layout_constraintTop_toBottomOf="@+id/subtract_trader_skill_button" />

    <TextView
        android:id="@+id/engineer_skill_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="15dp"
        android:text="Engineer"
        app:layout_constraintBottom_toTopOf="@+id/subtract_engineer_skill_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_engineer_skill_button"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trader_skill_label" />

