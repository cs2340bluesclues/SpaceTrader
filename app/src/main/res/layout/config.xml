        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/subtract_pilot_skill_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="190dp"
        android:text="@string/minus"
        app:layout_constraintBottom_toTopOf="@+id/pilot_skill_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toEndOf="@+id/add_pilot_skill_button"
        app:layout_constraintTop_toBottomOf="@+id/set_skills_label" />

    <Button
        android:id="@+id/add_fighter_skill_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="46dp"
