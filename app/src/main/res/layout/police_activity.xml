<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp">


        <TextView
            android:id="@+id/intro_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/police_warning"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/police_directions"

            />

        <Button
            android:id="@+id/accept_check_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accept" />

        <Button
            android:id="@+id/bribe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bribe" />

        <Button
            android:id="@+id/flee_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flee" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>